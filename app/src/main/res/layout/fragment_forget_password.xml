<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ForgetPasswordFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvForgotPasswordHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="34sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_extra_bold"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Email or Phone"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etForgotPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_et_grey_background_blue_stroke"
            android:hint="Email or Phone"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_light"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnForgotPasswordSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_button_bg"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_medium"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset link sent!"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/green"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>